<%= simple_form_for @taxon, **@form_params, wrapper: :horizontal_form, wrapper_mappings: {
    boolean:       :horizontal_boolean,
    check_boxes:   :horizontal_collection,
    file:          :horizontal_file,
    radio_buttons: :horizontal_collection,
    range:         :horizontal_range,
    #time:          :custom_multi_select,
    select:        :horizontal_collection
    #date:          :horizontal_multi_select,
    #datetime:      :horizontal_multi_select,
    #select:        :floating_labels_select
} do |f| %>

  <%= link_to_add_association('<span class="glyphicon glyphicon-plus" aria-hidden="true"></span> metadatos'.html_safe, f, :metadatos, partial: 'fichas/taxa/seccion_metadatos/form_metadatos', :class => 'btn btn-info btn-sm', render_options: { locals: { f_taxon: f} }, role: 'tab', "data-toggle" => 'tab', "aria-controls" => 'metadatos', 'data-association-insertion-node' => '#metadatos', 'data-association-insertion-method' => 'append', href: '#metadatos', style: 'display: none;') if @taxon.new_record? %>

  <div id='contenido_metadatos'>
    <hr />
    <h3 class="text-center titulo-seccion text-primary"><%=t('general.titulos_secciones.metadatos')%></h3>
    <% # OCUPA: taxon  %>
    <%= f.simple_fields_for :metadatos do |info| %>
      <%= render partial: 'fichas/taxa/seccion_metadatos/form_metadatos', locals: {f: info, f_taxon: f } %>
    <% end %>
  </div>

<% end %>