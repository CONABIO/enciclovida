<div class='nested-fields'>
  <%= f.input :estadoConser %>

  <h3 class="titulo_subseccion"><%= t('secciones.s_conservacion.manejo_aprov_acciones_conserv') %></h3>
  <%= #< %= link_to_add_association '<span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Asociar una info'.html_safe, f, :info_acciones_manejo_c, partial: 'fichas/taxa/caracteristicas_especie/observaciones_especie_x', :class => 'btn btn-info btn-sm', role: 'tab', "data-toggle" => 'tab', "aria-controls" => 'info-acciones-manejo-c', 'data-association-insertion-node' => '#info-acciones-manejo-c', 'data-association-insertion-method' => 'append', href: '#info-acciones-manejo-c' % >
  %>
  <div id="info-acciones-manejo-c">
    <%= f.simple_fields_for :info_acciones_manejo_c do |info| %>
      <%= render partial: 'fichas/taxa/caracteristicas_especie/observaciones_especie_x', locals: {f: info, titulo: t('secciones.s_conservacion.acciones_manejo')} %>
    <% end %>
  </div>

  <%= f.association :t_esquemamanejo,
                    label_method: :descn1,
                    value_method: :idopcion,
                    collection: Fichas::Cat_Preguntas.where(idpregunta: Fichas::Caracteristicasespecie::OPCIONES[:esquemamanejo]),
                    :as => :select,
                    input_html: {
                        class: 'form-control selectpicker',
                        multiple: true,
                        'data-live-search': 'true',
                        'title': t('general.seleccionar_opciones'),
                        'data-selected-text-format': 'count > 3'
                    }
  %>

  <%= f.association :t_tipopesca,
                    label_method: :descn1,
                    value_method: :idopcion,
                    collection: Fichas::Cat_Preguntas.where(idpregunta: Fichas::Caracteristicasespecie::OPCIONES[:tipopesca]),
                    :as => :select,
                    input_html: {
                        class: 'form-control selectpicker',
                        multiple: true,
                        'data-live-search': 'true',
                        'title': t('general.seleccionar_opciones'),
                        'data-selected-text-format': 'count > 3'
                    }
  %>

  <h3 class="titulo_subseccion"><%= t('secciones.s_conservacion.marco_legal_nacional_e_internacional') %></h3>
  <%= f.input :marcolegal %>
  <%= f.input :tipoVeda, :as => :select, collection: Fichas::Conservacion::TIPO_VEDA, include_blank: true, input_html: {class: 'form-control selectpicker', 'title': t('general.seleccionar_opcion')} %>

  <div style="display: none;">
    <%= f.association :t_regioncaptura,
                      label_method: :descn1,
                      value_method: :idopcion,
                      collection: Fichas::Cat_Preguntas.where(idpregunta: Fichas::Caracteristicasespecie::OPCIONES[:regioncaptura]),
                      :as => :select,
                      input_html: {
                          class: 'form-control selectpicker',
                          multiple: true,
                          'data-live-search': 'true',
                          'title': t('general.seleccionar_opciones'),
                          'data-selected-text-format': 'count > 3'
                      }
    %>
    <%= f.input :descManejoAprov %>
    <%= f.input :tipoAprovEsp, :as => :select, collection: Fichas::Conservacion::TIPO_APROVECHAMIENTO, include_blank: true, input_html: {class: 'form-control selectpicker', 'title': t('general.seleccionar_opciones')} %>
  </div>

</div>