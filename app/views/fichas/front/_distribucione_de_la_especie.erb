<div class="row showInfo">
  <div class="col-md-12">
    <% if @distribucion.infoAdicionalMun.present? %>
      <h6>Región </h6>
      <p class="text-justify"><%= @distribucion.infoAdicionalMun.a_HTML %></p>
    <% end %>

    <% if @habitat.estadoHabitat.present? %>
      <h6>Estado del hábitat con respecto al desarrollo natural del taxón</h6>
      <p class="text-justify"><%= @habitat.estadoHabitat.a_HTML %></p>
    <% end %>

    <% if @distribucion.tiene_datos? || @endemica.tiene_datos? %>       
      <div class="row mt-3 mb-3">

        <% if @distribucion.tiene_datos? %>
          <div class="col-md-6 ficaBordeSeparador">
            <h6>Distribución:</h6>
            <ul>
              <% if @distribucion.historicaPotencial.present? %>
                <li>
                  <h6>Histórica o potencial</h6>
                  <p class="text-justify"><%= @distribucion.historicaPotencial.a_HTML %></p>
                </li>
              <% end %>

              <% if @distribucion.alcanceDistribucion.present? %>
                <li>
                  <h6>Amplia o restringida</h6>
                  <p class="text-justify"><%= @distribucion.alcanceDistribucion.a_HTML %></p>
                </li>
              <% end %>

              <% if @distribucion.infoAdicionalAlcance.present? %>
                <li>
                  <h6>Información adicional</h6>
                  <p class="text-justify"><%= @distribucion.infoAdicionalAlcance.a_HTML %></p>
                </li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <% if @endemica.tiene_datos? %>
          <div class="col-md-6">
            <h6>Endemismo:  </h6>
            <ul>
              <% if @endemica.endemicaA.present? %>
                <li>
                  <p class="text-justify"><%= @endemica.endemicaA.a_HTML %></p>
                </li>
              <% end %>

              <% if @endemica.infoAdicionalEndemica.present? %>
              <li>
                <p class="text-justify">Información adicional: <%= @endemica.infoAdicionalEndemica.a_HTML %></p>
              </li>
              <% end %>
            </ul>
          </div>
        <% end %>

      </div>
    <% end %>

  </div>
</div>