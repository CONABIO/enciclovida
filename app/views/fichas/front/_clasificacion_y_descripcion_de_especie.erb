<div class="row showInfo">
  <div class="col-md-8">
    <% if @ficha[:taxon].resumenEspecie.present? %>
      <h5>Resumen de la especie</h5> <p class="text-justify"><%= @ficha[:taxon].resumenEspecie.a_HTML %></p>
      <br />
    <% end %>

    <% if @taxon.descEspecie.present? %>
      <h5>Descripción de la especie</h5> <p class="text-justify"><%= @ficha[:taxon].descEspecie.a_HTML %></p>
      <br />
    <% end %>

    <% if @ficha[:taxon].especiesSmilares.present? %>
      <h5>Especies similares</h5>
      <p class="text-justify"><%= @ficha[:taxon].especiesSmilares.a_HTML %></p>
      <br />
    <% end %>

    <% if @ficha[:edad_peso_largo][:estatus] %>
      <h5>Información adicional</h5>
      <table class="table table-striped table-bordered">

        <thead>
        <tr>
          <th></th>
          <th>Machos</th>
          <th>Hembras</th>
        </tr>
        </thead>

        <tbody>

        <% if @ficha[:edad_peso_largo][:edad] %>
          <tr>
            <th>Longevidad (<%= @ficha[:taxon].tiempoedadhembra.present? ? @ficha[:taxon].tiempoedadhembra.a_HTML : 'años' %>)</th>
            <td><%= @ficha[:taxon].edadinicialmachos %> a <%= @ficha[:taxon].edadfinalmachos %></td>
            <td><%= @ficha[:taxon].edadinicialhembras %> a <%= @ficha[:taxon].edadfinalhembras %></td>
          </tr>
        <% end %>

        <% if @ficha[:edad_peso_largo][:peso] %>
          <tr>
            <th>Peso (gramos)</th>
            <td><%= @taxon.pesoinicialmachos %> a <%= @taxon.pesofinalmachos %></td>
            <td><%= @taxon.pesoinicialhembras %> a <%= @taxon.pesofinalhembras %></td>
          </tr>
        <% end %>

        <% if @ficha[:edad_peso_largo][:largo] %>
          <tr>
            <th>Largo (centímetros)</th>
            <td><%= @taxon.largoinicialmachos %> a <%= @taxon.largofinalmachos %></td>
            <td><%= @taxon.largoinicialhembras %> a <%= @taxon.largofinalhembras %></td>
          </tr>
        <% end %>

        </tbody>

      </table>
    <% end %>

  </div>

  <div class="col-md-4 p-3 shadow-lg bg-white">
    <h5 class="text-center text-info">Taxonomía</h5>
    <p><strong>Reino: </strong><%= @ficha[:especie].x_reino %></p>
    
    <p>
      <% if @ficha[:especie].x_reino == 'Animalia' %>
        <strong>Phylum</strong>: <%= @ficha[:especie].x_phylum %>
      <% else %>
      <strong>División</strong>: <%= @ficha[:especie].x_division %>
      <% end %>
    </p>
    
    <p><strong>Clase: </strong><%= @ficha[:especie].x_clase %></p>
    <p><strong>Orden: </strong><%= @ficha[:especie].x_orden %></p>
    <p><strong>Familia: </strong><%= @ficha[:especie].x_familia %></p>
    <p><strong>Género: </strong><%= @ficha[:especie].x_genero %></p>
    <p><strong>Especie: </strong><%= @ficha[:especie].x_especie %></p>
    <br>
    <h5 class="text-center text-info">Nombre científico</h5>
    <p><i><%= @ficha[:especie].nombre_cientifico %></i> <%= @ficha[:especie].nombre_autoridad %></p>
    <br>

    <%= dameCategoriasDeRiesgo %>

  </div>
</div>