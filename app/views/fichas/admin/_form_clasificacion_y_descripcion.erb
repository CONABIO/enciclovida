    <%= f.input :informacion_adicional, :as => "text", input_html: { value: nleg.infoAdicional } %>
    <%
  end

  # Buscar la legislacion: NOM-059-SEMARNAT 2010  - - - -
  if legislaciones.any? { |legislacion| legislacion.nombreLegislacion == Fichas::Legislacion::TIPOS_LEGISLACIONES[1]
    %>
      <%= f.input :_2010, input_html: {class: 'form-control', value: legislacion.estatusLegalProteccion }%>
      <%= f.input :informacion_adicionale, :as => "text", input_html: {class: 'form-control', value: legislacion.infoAdicional }%>
    <%
    }
  else
    # Crear la legislación y asignar el nombre
