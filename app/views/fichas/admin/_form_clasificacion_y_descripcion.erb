    nleg.nombreLegislacion = Fichas::Legislacion::TIPOS_LEGISLACIONES[1] # Asignar nombre de la legislación
    %>
      <%= f.input :_2010, input_html: { value: nleg.estatusLegalProteccion} %>
      <%= f.input :informacion_adicional, :as => "text", input_html: { value: nleg.infoAdicional } %>
    <%
  end

  # Buscar la legislacion: Categoría de riesgo según UICN  - - - -
  if legislaciones.any? { |legislacion| legislacion.nombreLegislacion == Fichas::Legislacion::TIPOS_LEGISLACIONES[2]
    %>
      <%= f.input :categoria_UICN, input_html: {class: 'form-control', value: legislacion.estatusLegalProteccion }%>
      <%= f.input :informacion_adicionale, :as => "text", input_html: {class: 'form-control', value: legislacion.infoAdicional }%>
    <%
  }
  else
    # Crear la legislación y asignar el nombre
    nleg = f.object.legislaciones.new
    nleg.nombreLegislacion = Fichas::Legislacion::TIPOS_LEGISLACIONES[2] # Asignar nombre de la legislación
    %>
      <%= f.input :categoria_UICN, input_html: { value: nleg.estatusLegalProteccion} %>
      <%= f.input :informacion_adicional, :as => "text", input_html: { value: nleg.infoAdicional } %>
    <%
  end

  # Buscar la legislacion: Regulación del comercio internacional de la especie (CITES)  - - - -
  if legislaciones.any? { |legislacion| legislacion.nombreLegislacion == Fichas::Legislacion::TIPOS_LEGISLACIONES[3]
    %>
      <%= f.input :categoria_CITES, input_html: {class: 'form-control', value: legislacion.estatusLegalProteccion }%>
      <%= f.input :informacion_adicionale, :as => "text", input_html: {class: 'form-control', value: legislacion.infoAdicional }%>
    <%
    }
  else
    # Crear la legislación y asignar el nombre
    nleg = f.object.legislaciones.new
    nleg.nombreLegislacion = Fichas::Legislacion::TIPOS_LEGISLACIONES[3] # Asignar nombre de la legislación
    %>
      <%= f.input :categoria_CITES, input_html: { value: nleg.estatusLegalProteccion} %>
      <%= f.input :informacion_adicional, :as => "text", input_html: { value: nleg.infoAdicional } %>
    <%
  end
%>

