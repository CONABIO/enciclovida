<div class="row showInfo">
  <div class="col-md-12" id="biologiaEspecie">

    <% if @historiaNatural.tipoReproduccion == 'animal' %>
      <%= render('fichas/secciones_info_especie/biologia_de_la_especie_animal', sin_info_msj: sin_info_msj) %>
    <% elsif @historiaNatural.tipoReproduccion == 'veget'  %>
      <%= render('fichas/secciones_info_especie/biologia_de_la_especie_vegetal', sin_info_msj: sin_info_msj) %>
    <%end%>

  </div>

  <div class="row">
    <div class="col-md-12">
      <br>
      <h4 class="text-center"><strong>Más información</strong> </h4>
      <br>
    </div>
    <div class="col-md-8">
      <br>

      <h4>Uso del hábitat </h4>
      <p> <%=@habitat.uso.present? ? @habitat.uso.html_safe : (sin_info_msj)%></p>
      <br>

      <h4>Hábito en caso de plantas</h4>
      <p> <%= @historiaNatural.habitoPlantas.present? ? (@historiaNatural.habitoPlantas) : (sin_info_msj)%></p>
      <br>

      <h4>Alimentación</h4> <p> <%=@historiaNatural.alimentacion.present? ? @historiaNatural.alimentacion.html_safe : (sin_info_msj)%></p>
      <h5>Información adicional</h5> <p> <%=@historiaNatural.descripcionAlimentacion.present? ? @historiaNatural.descripcionAlimentacion.html_safe : (sin_info_msj)%></p>
      <br>

      <h4>Estrategia trófica</h4> <p> <%=@historiaNatural.estrategiaTrofica.present? ? @historiaNatural.estrategiaTrofica : (sin_info_msj)%></p>
      <h5>Información adicional</h5> <p> <%=@historiaNatural.descripcionEstrofica.present? ? @historiaNatural.descripcionEstrofica.html_safe : (sin_info_msj)%></p>
      <br>

      <h4>Técnica de forrajeo</h4> <p> <%=@historiaNatural.forrajeo.present? ? @historiaNatural.forrajeo.html_safe : (sin_info_msj)%></p>
      <h5>Información adicional</h5> <p> </p>
      <br>

      <h4>Dispersión</h4>
      <ul type="none">
        <li>
          <h5>Tipo de dispersión</h5><p><%=@historiaNatural.tipoDispersion.present? ? @historiaNatural.tipoDispersion.html_safe : (sin_info_msj)%></p>
          <strong>Información adicional: <p><%=@historiaNatural.descTipoDispersion.present? ? @historiaNatural.descTipoDispersion.html_safe : (sin_info_msj)%></p></strong>
        </li>
        <li>
          <h5>Estructura o individuo dispersado</h5><p><%=@historiaNatural.estructuraDispersora.present? ? @historiaNatural.estructuraDispersora.html_safe : (sin_info_msj)%></p>
          <strong>Información adicional: <p><%=@historiaNatural.descEstDispersora.present? ? @historiaNatural.descEstDispersora.html_safe : (sin_info_msj)%></p></strong>
        </li>
        <li>
          <h5>Distancia de dispersión</h5><p><%= @historiaNatural.distanciadispercioninicial.to_s + " - " +@historiaNatural.distanciadispercionfinal.to_s %></p>
        </li>
      </ul>
    </div>

    <div class="col-md-4 fichaSeccionApartadosT1">

      <h4 class="text-center">Conducta</h4> <p> <%=@historiaNatural.conducta.present? ? @historiaNatural.conducta.html_safe : (sin_info_msj)%></p>
      <ol type="A">
        <li><strong>Características conductuales</strong> <p class="text-justify"></p></li>

        <li><strong>Estatus migratorio</strong> <p class="text-justify"> <%=@historiaNatural.migracion.present? ? @historiaNatural.migracion.html_safe : (sin_info_msj)%></p>
          <h5>Tipo de migración que realiza la especie</h5> <p class="text-justify"> <%=@historiaNatural.tipoMigracion.present? ? @historiaNatural.tipoMigracion.html_safe : (sin_info_msj)%></p></li>

        <li><strong>Hábito</strong> <p class="text-justify"> <%=@historiaNatural.habito.present? ? @historiaNatural.habito.html_safe : (sin_info_msj)%></p>
          <h5>Información adicional</h5> <p class="text-justify"> </p></li>

        <li><strong>Periodo de actividad</strong> <p class="text-justify"> <%=@historiaNatural.tipopHabito.present? ? @historiaNatural.tipopHabito.html_safe : (sin_info_msj)%></p>
          <h5>Información adicional</h5> <p class="text-justify"></p></li>

        <li><strong>Hibernación</strong> <p class="text-justify"> <%=@historiaNatural.hibernacion.present? ? @historiaNatural.hibernacion.html_safe : (sin_info_msj)%></p>
          <h5>Información adicional</h5> <p class="text-justify"> <%=@historiaNatural.infoaddhibernacion.present? ? @historiaNatural.infoaddhibernacion.html_safe : (sin_info_msj)%></p></li>

        <li><strong>Territorialidad</strong> <p class="text-justify"> <%=@historiaNatural.territorialidad.present? ? @historiaNatural.territorialidad.html_safe : (sin_info_msj)%></p>
          <h5>Información adicional</h5> <p class="text-justify"> <%=@historiaNatural.infoaddterritorialidad.present? ? @historiaNatural.infoaddterritorialidad.html_safe : (sin_info_msj)%></p></li>

        <li><strong>Ámbito hogareño (animales)</strong> <p class="text-justify"> <%=@historiaNatural.ambitoHogareno.present? ? @historiaNatural.ambitoHogareno.html_safe : (sin_info_msj)%></p></li>

        <li><strong>Mecanismos de defensa</strong> <p class="text-justify"> <%=@historiaNatural.mecanismosDefensa.present? ? @historiaNatural.mecanismosDefensa.html_safe : (sin_info_msj)%></p>
          <h5>Información adicional</h5> <p class="text-justify"> <%=@historiaNatural.infoaddmecdefensa.present? ? @historiaNatural.infoaddmecdefensa.html_safe : (sin_info_msj)%></p></li>

        <li><strong>Organización social</strong> <p class="text-justify"> <%=@demografiaAmenazas.organizacionSocial.present? ? @demografiaAmenazas.organizacionSocial.html_safe : (sin_info_msj)%></p>
          <h5>Información adicional</h5> <p class="text-justify"> <%=@demografiaAmenazas.infoaddorgsocial.present? ? @demografiaAmenazas.infoaddorgsocial.html_safe : (sin_info_msj)%></p></li>
      </ol>
    </div>
  </div>
</div>