<div class="form-group mt-4">
  <label for="archivo">Archivo</label>
  <%= file_field_tag :archivo, class: 'btn-file form-control mt-2' %>
  <small class="text-muted"><%= archivo_label.html_safe %></small>
</div>

<% if !usuario_signed_in? %>
    <div class="form-group mt-4">
      <label for="correo">Correo</label>
      <%= text_field_tag :correo, nil, placeholder: 'tu correo', class: 'form-control mt-2' %>
      <small class="text-muted">Solo es necesario si subes un archivo; para enviar la validaci√≥n cuando termine</small>
    </div>
<% end %>

<hr />
<%= submit_tag :Envia, class: 'btn btn-success float-right', 'data-disable-with' => 'Procesando ...' %>
