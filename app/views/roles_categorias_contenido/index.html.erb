<h1>Roles - CategoriasContenidos</h1>

<table class="table table-condensed table-hover table-responsive">
  <thead>
  <tr>
    <th>Categoria Contenido</th>
    <th>Rol</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @roles_categorias_contenido.each do |rol_categorias_contenido| %>
      <tr>
        <td>[<%= rol_categorias_contenido.categorias_contenido_id %>] - <%= rol_categorias_contenido.nombre %></td>
