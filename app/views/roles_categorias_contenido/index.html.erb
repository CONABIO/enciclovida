  <% end %>
  </tbody>
</table>

<p class="text-right">
  <%= link_to "<b class='glyphicon glyphicon-plus'></b> Categoria_contenido a Rol".html_safe, new_rol_categorias_contenido_path, class: 'btn btn-info btn-sm' %>
</p>
