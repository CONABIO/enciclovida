<% content_for(:title) do %>
    <%= @titulo=CONFIG.site_name %>
<% end %>
<% content_for(:extracss) do %>
    <%= stylesheet_link_tag    "index", media: "all", "data-turbolinks-track" => true %>
<% end %>
<% content_for(:ribbon) do %>
    <div style="color: white;
		    font-weight: bold;
		    font-size: .7em;
		    padding: 2px 0px 2px 15px;
		    position: fixed;
		    z-index: -1;
		    background-image: linear-gradient(to right, rgba(255, 147, 30, 0.75) 40%, #ff931e 100%);
		    top: 0;
		    left: 0" >
      Catálogos actualizados 09/15
      <div style="width: 13px;
		      height: 13px;
		      float: right;
		      transform: rotate(45deg);
		      margin-left: 4px;
		      margin-right: -7px;
		      margin-top: 0px;
		      z-index: 10;
		      border-left: 6px solid #ff931e;
		      border-bottom: 6px solid #ff931e;" onclick="$(this).hide();"></div>
    </div>
<% end %>

<%= form_tag '/especies/destruye_seleccionados' %>
<% if notice.present? %>
    <div class="alert alert-warning" role="alert"><%= notice %></div>
<% end %>

<div class="col-xs-12 col-sm-12 col-md-5 col-lg-5 col-md-push-7 col-lg-push-7">
  <p class="text-center">
  <span style="font-size: 2.3em; font-weight: bolder; color: #691F14 ! important;">Biotas</span> integra información de <span style="font-size: 1.8em; font-weight: bolder; color: #503E01 ! important;">especies</span><br>que viven en <span style="font-size: 1.8em; font-weight: bolder; color: #724629 ! important;">México</span>.</p>
  <br><br>
  <p>Comentarios y sugerencias generales a: <br /> <%= link_to "<span class='glyphicon glyphicon-envelope'></span>  biotas@conabio.gob.mx".html_safe,"mailto:bios@conabio.gob.mx" %>  </p>
  <div class="well text-center text-primary">Búsquedas geográficas en el Geoportal <strong>¡Próximamente!</strong></div>
  <p class="text-center"><img src="/assets/app/imgPortada.png" class="img-responsive" style="width: 100%; max-width: 680px;"></p>
</div>
<div class="col-xs-12 col-sm-12 col-md-7 col-lg-7 col-md-pull-5 col-lg-pull-5">
  <img src="/assets/app/backEncabeza2.png" class="img-responsive" style="width: 100%; max-width: 680px;">
  <% if I18n.locale.to_s == 'es-cientifico' %>
