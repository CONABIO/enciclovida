<%= javascript_include_tag params[:controller] %>
<script type="text/javascript" charset="utf-8" data-turbolinks-track="true">
    $(document).ready(function() {
        $.ajax({
            url: "/especies/dame_listas",
            type: 'GET'
        }).done(function(html) {
            $('#widget_busqueda').html(html);
        }).fail(function(){
            $('#widget_busqueda').html('<p>Hubo un error al cargar los datos.');
        });
    });
</script>

<% content_for(:title) do %>
    <%= @titulo="Resultados (#{@taxones.length})" %>
<% end %>

<p id="notice"><%= notice %></p>

<div class="titulo">
  <h1><%= @titulo %></h1>
</div>

<div id="acciones">
  <%= label_tag 'box_especie', 'Selecciona todos' %>
  <%= check_box_tag :box_especie, :todos %>
</div>

<%= @resultado %>
<%= @resultado2 %>
<%= render @vista, :taxones => @taxones
%>

<p class="enlaces_acciones">
  <%= 'Tu b&uacute;squeda no dio ningÃºn resultado.'.html_safe if @taxones.length == 0 %>
</p>