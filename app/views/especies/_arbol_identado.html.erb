<% if @taxones.present? && @taxones.length > 0 %>
    <% if @despliega_o_contrae %>
        <ul>
          <% @taxones.each do |taxon| %>
              <%= construye_arbol(taxon, :son_hojas => 1).html_safe %>
          <% end %>
        </ul>

    <% else %>
        <ul class="nodo_mayor">
          <% @taxones.each_with_index do |taxon, index| %>
              <%= '<ul>'.html_safe if index != 0 %>
              <%= construye_arbol(taxon, :son_hojas => 0).html_safe %>
          <% end %>

          <% @taxones.length.times do %>
              <%= '</li></ul>'.html_safe %>
          <% end %>
        </ul>
    <% end %>
<% end %>