<% if @taxones.present? && @taxones.length > 0 %>
    <% if @despliega_o_contrae %>
        <ul>
          <% @taxones.each do |taxon| %>
              <%= construye_arbol(taxon, :son_hojas => 1).html_safe %>
          <% end %>
        </ul>

    <% else %>
        <%= dameArbolIdentadoInicial(@taxones) %>

    <% end %>
<% end %>