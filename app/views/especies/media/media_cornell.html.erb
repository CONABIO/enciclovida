<% if page.nil? %>
  <div class="d-flex flex-column flex-md-row justify-content-between mb-3">
    <% icono = {'photo' => 'camera', 'video' => 'film', 'audio' => 'volume-up'} %>
    <i class='fa fa-<%=icono[type]%>'></i>
    <i class ='macaulay_library-ev-icon'></i>
    <span>
      <i class ='cornell_lab-ev-icon'></i>
      <i class ='cornell_lab_colors-ev-icon'></i>
    </span>
  </div>
  <div class="paginado-media d-flex">
<% end %>

<% if @array[0][:msg].present? %>
  <p><strong><%= @array[0][:msg] %></strong></p>
<% else %>
  <button type="button" class="btn btn-light"><i class="fa fa-angle-double-left"></i></button>
  <button type="button" class="btn btn-light"><i class="fa fa-angle-double-right"></i></button>
  <% @array.each do |item|  %>
    <%= imprimeMediaCornell(item,type) %>
  <% end %>
<% end %>

<% if page.nil? %>
  <b class="next"><a href data-params="media-cornell?type=<%= type %>" data-direccion="1"> <span aria-hidden="true">&rarr;</span></a></b>
  </div>
<% end %>

