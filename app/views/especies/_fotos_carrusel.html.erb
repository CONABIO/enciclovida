<% content_for(:extrajs_carrusel) do %>
    <%= javascript_include_tag "carrusel", "data-turbolinks-track" => true %>
<% end %>
<% content_for(:extracss) do %>
    <%= stylesheet_link_tag    "carrusel", media: "all", "data-turbolinks-track" => true %>
<% end %>

<div id="foto-carrusel" class="text-center">
  <%= link_to image_tag(@photos[0].best_photo, :id=>'foto-carrusel-interna', :class=>'img-responsive'), @photos[0].native_page_url, :target => :_blank, :class => 'enlace-atribucion' %>
  <p><small class="text-left" id='foto-atribucion'>  <%= @photos[0].attribution %></small>
  <small>Las imágenes de Flickr pueden pertenecer a especies que no se encuentran en México</small></p>
</div>


<div id="carrusel" class="frame">
  <div class="slidee">
    <% @photos.each do |p| %>
        <%-
            next unless p.square_url.present?
            img_square = p.square_url

            img_normal = p.best_photo
            next unless img_normal.present?
        -%>
        <img src="<%= img_square %>" data-large="<%= img_normal %>" data-attribution="<%= p.attribution %>" width="70" height="70" data-native-page-url="<%= p.native_page_url %>"/>
    <% end %>
  </div>
</div>
<div class="scrollbar">
  <div class="handle"></div>
</div>