<script data-turbolinks-track="true" type="text/javascript" charset="utf-8">
    <% ids = dameCaracteristicaDistribucionAmbienteJS(@especie) %>
    $(document).ready(function(){
        $('<%="#id"+ids.join(", #id")%>').removeClass('panel-disabled');
    });
</script>

<% botones = ponCaracteristicaDistribucionAmbienteJS %>
<div class="panel panel-default col-xs-12 col-sm-7 col-md-8 col-lg-8" id="panelCaracteristicaDistribucionAmbientePt">
  <div class="panel-heading" onclick="$('#panelCaracteristicaDistribucionAmbiente').slideToggle({duration: 500, easing: 'easeOutBounce', done: $('#panelCaracteristicaDistribucionAmbientePt').toggleClass('dropup col-sm-7 col-md-8 col-lg-8 col-sm-12 col-md-12 col-lg-12')});$('#more-info').toggleClass('hidden')">
    <h5><strong>Categorías de riesgo, comercio internacional, ambiente, tipo de distribución:</strong>
      <span class="caret"></span></h5>
  </div>
  <div class="panel-body text-center" id="panelCaracteristicaDistribucionAmbiente" style="display: none;">
    <div class="col-xs-12 col-sm-7 col-md-7 col-lg-6">
      <div class="col-xs-6 col-sm-12 col-md-6 col-lg-6 text-center" id="NOM059">
        <h6><strong><%= link_to "Categoría nacional de riesgo", 'http://www.biodiversidad.gob.mx/especies/catRiesMexico.html' %></strong><br /><small><%=t(:nom)%></small></h6>
        <%= botones[:nom].join("\n").html_safe %>
      </div>
      <div class="col-xs-6 col-sm-12 col-md-6 col-lg-6 text-center" id="IUCN">
        <h6><strong><%= link_to "Categoría internacional de riesgo", 'http://www.biodiversidad.gob.mx/especies/catRiesMundo.html' %></strong><br /><small><%=t(:iucn)%></small></h6>
        <%= botones[:iucn].join("\n").html_safe %>
      </div>
      <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 text-center" id="CITES">
        <h6><strong><%= link_to "Protegidas del comercio internacional", 'http://www.biodiversidad.gob.mx/especies/catRiesComInt.html' %></strong><br /><small><%=t(:cites)%></small></h6>
        <%= botones[:cites].join("\n").html_safe %>
      </div>
      <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 text-center" id="Prioritaria">
        <h6><strong><%= link_to "Prioritarias para la conservación", 'http://dof.gob.mx/nota_detalle.php?codigo=5334865&fecha=05/03/2014' %></strong><br /><small>SEMARNAT 2014</small></h6>
        <%= botones[:prioritaria].join("\n").html_safe %>
      </div>
    </div>
    <div class="col-xs-12 col-sm-5 col-md-5 col-lg-6">
      <div class="col-xs-6 col-sm-12 col-md-7 col-lg-6 text-center" id="Ambiente">
        <h6><strong>Ambiente</strong></h6>
        <%= botones[:ambiente].join("\n").html_safe %>
      </div>
      <div class="col-xs-6 col-sm-12 col-md-5 col-lg-6 text-center" id="TipoDistribucion">
        <h6><strong>Tipo de distribución: </strong></h6>
        <%= botones[:tipoDistribucion].join("\n").html_safe %>
      </div>
    </div>
  </div>
</div>
<div class="col-xs-12 col-sm-5 col-md-4 col-lg-4 text-right" id="more-info">
  <h6><strong>Navegar hacia: </strong></h6>
  <% if I18n.locale.to_s == 'es-cientifico' %>
      <a href="#pestañas" onclick="$('#conabio_info_li > a').trigger('click');" class="btn btn-link btn-xs btn-title" title="Ir a los catálogos de CONABIO">
        <strong><i class="archive-ev-icon"></i>Catálogos</strong>
      </a>
      <a href="#pestañas" onclick="$('#arbol_taxonomico_li > a').trigger('click');" class="btn btn-link btn-xs btn-title" title="Ir al arreglo taxonómico">
        <strong><i class="flow-cascade-ev-icon"></i><%= t :arreglo_taxonomico %></strong>
      </a>
      <% if @especie.species_or_lower? %>
          <a href="#pestañas" onclick="$('#description_li > a').trigger('click');" class="btn btn-link btn-xs btn-title" title="Ir a las ficha del taxón">
            <strong><i class="newspaper-ev-icon"></i>Ficha</strong>
          </a>
      <% end %>
  <% else %>
      <% if @especie.species_or_lower? %>
          <a href="#pestañas" onclick="$('#description_li > a').trigger('click');" class="btn btn-link btn-xs btn-title" title="Ir a las ficha del taxón">
            <strong><i class="newspaper-ev-icon"></i>Ficha</strong>
          </a>
      <% end %>
      <a href="#pestañas" onclick="$('#arbol_taxonomico_li > a').trigger('click');" class="btn btn-link btn-xs btn-title" title="Ir al arreglo taxonómico">
        <strong><i class="flow-cascade-ev-icon"></i><%= t :arreglo_taxonomico %></strong>
      </a>
      <a href="#pestañas" onclick="$('#conabio_info_li > a').trigger('click');" class="btn btn-link btn-xs btn-title" title="Ir a los catálogos de CONABIO">
        <strong><i class="archive-ev-icon"></i>Catálogos</strong>        </a>
  <% end %>
</div>

