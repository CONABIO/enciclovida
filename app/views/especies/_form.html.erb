      <%= f.label :id_ascend_obligatorio %><br>
      <%= f.text_field :id_ascend_obligatorio %>
    </div>

    <div class="field">
      <%= f.label :estatus %><br>
      <%= f.text_area :estatus %>
    </div>
    <div class="field">
      <%= f.label :fuente %><br>
      <%= f.text_field :fuente %>
    </div>
    <div class="field">
      <%= f.label :nombre_autoridad %><br>
      <%= f.text_field :nombre_autoridad %>
    </div>
    <div class="field">
