<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css" integrity="sha384-PmY9l28YgO4JwMKbTvgaS7XNZJ30MK9FAZjjzXtlqyZCqBY6X6bXIkM++IkyinN+" crossorigin="anonymous">

<div class="container">
  <!-- Div qu contendrá todos los articulos que devuolverá el servicio Janium -->
  <div id="janium_records" class="row">

    <%
      @registros_janium.count.times do |num|
    %>

    <!-- Div por cada articulo -->
    <div id="record_id" class="col-sm-12 col-md-12 record">

      <div class="record-header">
        <div class="row">
          <div class="col-md-6"><h5><i class='glyphicon glyphicon-pushpin'></i> panoncadcgw</h5></div>
          <div class="col-md-6 text-right"><h5><i class='glyphicon glyphicon-calendar'></i> 2016</h5></div>
        </div>
      </div>

      <div class="record-info">
        <div class="row">
          <div class="col-md-3 text-center portada">
            <img src="http://200.12.166.51/janium/Mapas/panoncagw_s.png" alt="">
            <br><br> <a href="#" target="blank"><i class='glyphicon glyphicon-eye-open'></i> Ver en línea</a>
          </div>
          <div class="col-md-9 titulo">
            <h3 class="text-warning">
              <%= @registros_janium.xpath('//soap:titulo', 'soap' => 'http://janium.net/services/soap')[num].text %>
            </h3>
            <br>
            <div class="autores">
              <h5 class="autor">Autores:</h5>
              <ul class="text-secondary">
                <li>Medellín Legorreta, Rodrigo Antonio</li>
              </ul>
            </div>
            <%
              r = @registros_janium[num]

            %>
            <%=
              r["titulo"]
            %>
          </div>
        </div>
      </div>

      <div class="record-more-info">
        <div class="row text-center">
          <div class="col-md-4" style="border-right: #6c3630; border-width: 0 1px 0 0; border-style: dashed">
            <h5>Pie de imprenta:</h5>
            <p>México : Corredor Biológico Mesoamericano-México (CBMM) , 2013</div></p>
          <div class="col-md-4" style="border-right: #6c3630; border-width: 0 1px 0 0; border-style: dashed">
            <h5>Descripción:</h5>
            <p>39 páginas</p>
          </div>
          <div class="col-md-4">
            <h5>Materias:</h5>
            <i>Jaguar,
              Conservación,
              Conectividad ecológica,
              Monitoreo biológico,
              Chiapas,
              Selva Maya Zoque,
              Selva Lacandona</i>
          </div>
        </div>

        <br><br>
        <i>* Proyecto financiado por la SEMARNAT y la CONABIO Contrato número: CBM-M/UTRCHyT/CONABIO/003/2010</i>

      </div>

      <div class="record-footer">
        <button type="button" class="btn btn-outline-primary"><i class='glyphicon glyphicon-plus-sign'></i> Ver ficha completa</button>
      </div>
    </div>
    <%
      end
    %>
  </div>
</div>



