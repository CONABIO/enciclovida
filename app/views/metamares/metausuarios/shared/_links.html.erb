<div class="text-info text-center">
  <%- if controller_name != 'sessions' %>
    <b> &middot; <%= link_to 'Inicia sesión', new_session_path(resource_name) %></b>
  <% end -%>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <b> &middot; <%= link_to 'Regístrate', new_registration_path(resource_name) %></b>
  <% end -%>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <b> &middot; <%= link_to '¿Olvidaste tu contraseña?', new_password_path(resource_name) %></b>
  <% end -%>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <b> &middot; <%= link_to '¿No recibiste el correo para confirmar tu cuenta?', new_confirmation_path(resource_name) %></b>
  <% end -%>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <b> &middot; <%= link_to '¿No recibiste el correo para desbloquear tu cuenta?', new_unlock_path(resource_name) %></b>
  <% end -%>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <b> &middot; <%= link_to "Inicia sesión con #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider) %></b>
    <% end -%>
  <% end -%>
  <b> &middot; </b>
</div>