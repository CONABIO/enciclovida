<h1 class="text-center">Crear cuenta para Infoceanos</h1>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {:class => 'form-horizontal'}) do |f| %>
  <% if devise_error_messages!.present? %>
    <div class="alert alert-danger" role="alert">
      <%= devise_error_messages! %>
    </div>
  <% end %>
  <div class="form-group">
    <h4><%= f.label :email %><small><i>: (con el que iniciaras sesi√≥n)</i></small></h4>
    <%= f.email_field :email, autofocus: true, class: 'form-control' %>
  </div>

  <h2 class="text-center">Tus datos personales</h2>
  <div class="form-group">
    <%= f.label :nombre %>:
    <%= f.text_field :nombre, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :apellido %>:
    <%= f.text_field :apellido, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :institucion %><small><i> (opcional)</i></small>:
    <%= f.text_field :institucion, class: 'form-control' %>
  </div>

  <div class="form-group form-inline">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
    <b> &middot; </b>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
  </div>
  <%= f.submit 'Crear cuenta', class: 'btn btn-lg btn-block btn-success' %>
<% end %>
<hr />

