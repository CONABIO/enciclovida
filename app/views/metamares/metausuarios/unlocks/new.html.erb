<h1 class="text-center">Desbloquear tu cuenta</h1>

<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>
  <div class="form-group form-inline justify-content-center">
    <%= f.label :email,  class: "font-weight-bold" %>
    <%= f.email_field :email, autofocus: true, class: 'form-control ml-2 mr-2' %>
    <%= f.submit "Enviar instrucciones", class: 'btn btn-success'%>
  </div>
<% end %>

<hr />
<%= render "metamares/metausuarios/shared/links" %>

