<%= semantic_form_for @proyecto do |f| %>

  <%= f.inputs :proyecto_titulo do %>
    <%= f.input :nombre_proyecto %>
    <%= f.input :financiamiento %>
    <%= f.input :tipo_monitoreo %>
    <%= f.input :objeto_monitoreo %>
    <%= f.input :campo_investigacion %>
    <%= f.input :campo_ciencia %>
    <%= f.input :finalidad %>
    <%= f.input :metodo %>
  <% end %>

  <%= render partial: 'form_info_adicional', locals: { f: f } %>
  <%= link_to_add_association 'Info adicional', f, :info_adicional, partial: 'form_info_adicional' %>

  <%= render partial: 'form_periodo', locals: { f: f } %>
  <%= link_to_add_association 'Periodo', f, :periodo, partial: 'form_periodo' %>

  <%= render partial: 'form_region', locals: { f: f } %>
  <%= link_to_add_association 'Region', f, :periodo, partial: 'form_region' %>

  <%= render 'form_institucion', locals: { f: f } %>
  <%= render 'form_datos', locals: { f: f } %>

<% end %>