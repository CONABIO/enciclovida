<%= form_for :proy_b, method: :get do |f| %>
  <%= f.text_field :proyecto %>
  <%= f.text_field :institucion %>
  <%= f.select :tipo_monitoreo, Metamares::Proyecto::TIPO_MONITOREO.sort.
      map{ |a| [t("metamares.proyectos.busqueda.#{a}", default: a), a] }, prompt: '--- Todos ---' %>
  <%= f.text_field :nombre %>
  <%= f.hidden_field :especie_id %>

  <%= f.submit :Buscar, { 'data-disable-with' => 'Buscando ...' } %>
  <%= f.submit :Reiniciar, type: :reset %>
<% end %>