  <ul class="nav nav-tabs links" role="tablist">
    <li role="presentation" class="active">
      <a href="#proyecto" class="btn btn-sm" aria-controls="proyecto" role="tab" data-toggle="tab">Proyecto</a>
    </li>
    <li role="presentation" >
      <%= link_to 'Info adicional', '#infoAdicional', :class => 'btn btn-sm', role: 'tab', "data-toggle" => 'tab', "aria-controls" => :info_adicional %>
    </li>
    <li role="presentation" >
      <%= link_to 'Periodo', '#periodo', :class => 'btn btn-sm', role: 'tab', "data-toggle" => 'tab', "aria-controls" => :periodo %>
    </li>
    <li role="presentation" >
      <%= link_to 'Region', '#region', :class => 'btn btn-sm', role: 'tab', "data-toggle" => 'tab', "aria-controls" => :region %>
    </li>
    <li role="presentation" >
      <%= link_to 'Dato', '#dato', :class => 'btn btn-sm', role: 'tab', "data-toggle" => 'tab', "aria-controls" => :dato %>
    </li>
    <li role="presentation" >
      <%= link_to 'Institucion', '#institucion', :class => 'btn btn-sm', role: 'tab', "data-toggle" => 'tab', "aria-controls" => :institucion %>
    </li>
    <li role="presentation" >
      <%= link_to 'Especies', '#especiesEstudiadas', :class => 'btn btn-sm', role: 'tab', "data-toggle" => 'tab', "aria-controls" => 'especiesEstudiadas' %>
    </li>
    <li role="presentation" >
      <%= link_to 'Keywords', '#keywords', :class => 'btn btn-sm', role: 'tab', "data-toggle" => 'tab', "aria-controls" => :keywords %>
