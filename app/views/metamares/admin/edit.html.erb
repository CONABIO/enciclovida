<%= semantic_form_for @usuario, url: metamares_admin_path(@usuario) do |f| %>

  <%= f.inputs :name => "usuario" do %>
    <%= f.input :nombre, label: 'Nombre(s)' %>
    <%= f.input :apellido, label: 'Apellido(s)' %>
    <%= f.input :email, label: 'Correo electrónico' %>
    <%= f.input :institucion, label: 'Institución' %>
    <%= f.input :password, label: 'Contraseña', :hint => 'Dejar vacío si no se desea cambiar' %>
    <%= f.input :password_confirmation, label: 'Confirma contraseña', :hint => 'Dejar vacío si no se desea cambiar' %>
  <% end %>

  <%= f.semantic_fields_for :usuario_roles do |rol| %>
    <%= rol.input :usuario_id, as: :hidden %>
    <%= rol.input :rol_id %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :button, label: @usuario.new_record? ? 'Crear' : 'Actualizar' %>
    <%= f.action :cancel, :as => :link, label: 'Cancelar' %>
  <% end %>

<% end %>