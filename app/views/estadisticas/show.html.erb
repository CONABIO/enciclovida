<div id="resultados-container" class="col-xs-12 state-one">

  <div class="row">
    <button id="toggleFiltros" class="btn btn-sm btn-default pull-left" onclick="$('#resultados-container').toggleClass('state-one state-two');" type="button">
      <span class="glyphicon"></span>
    </button>
  </div>

  <hr/>

  <%= render :file => 'estadisticas/filtros' %>

  <div id="pestañas" class="panel">
    <ul class="nav nav-tabs" data-tabs="tabs">

      <li class="active">
        <a href="#resultados-g" data-toggle="tab" class="tab_grafica" url="<%= request.url %>" categoria_taxonomica_id="0">Gráfica</a>
      </li>

      <li class="">
        <a href="#resultados-0" data-toggle="tab" class="tab_por_categoria" url="<%= request.url %>" categoria_taxonomica_id="0">Todos (<%= @totales if @totales.present? %>)</a>
      </li>

      <% @por_categoria.each do |cat| %>
        <li>
          <a href="#resultados-<%= cat[:categoria_taxonomica_id]%>" data-toggle="tab" class="tab_por_categoria" url="<%= cat[:url] %>" categoria_taxonomica_id="<%= cat[:categoria_taxonomica_id] %>">
            <%= "#{cat[:nombre_categoria_taxonomica]} (#{cat[:cuantos]})" %>
          </a>
        </li>
      <% end %>
    </ul>

    <div class="tab-pane panel-body panel-resultados" id="resultados-g">
      <%= render :partial => 'busquedas/resultados' %>
    </div>

    <div class="tab-pane panel-body panel-resultados" id="resultados-0">
      <%= render :partial => 'busquedas/resultados' %>
    </div>

    <% @por_categoria.each do |cat| %>
      <div class="tab-pane panel-body panel-resultados" id="resultados-<%= cat[:categoria_taxonomica_id] %>"></div>
    <% end %>
  </div>

  <input type="button" value="texto del botón" id="buscar" class="buscar">

  <div id="pestañas" class="panel">
    <ul class="nav nav-tabs" data-tabs="tabs">
      <li class="active">
        <a href="#grp" data-toggle="tab" id="nivel_" id_div="grafica-estd"><b></b> Gráfica</a>
      </li>
      <li>
        <a href="#todos" data-toggle="tab" id="nivel_" id_div="todos"><b></b> Resultados</a>
      </li>
    </ul>

    <div class="tab-pane panel-body grafica-estadisticas" id="grafica-estd">
      <div id="grp">
        <div id="sequence"></div>
        <div id="chart">
          <div id="explanation" style="visibility: hidden;">
            <span id="percentage"></span><br/>
            <p id="estadistica"></p>
          </div>
        </div>

        <script type="text/javascript" charset="utf-8">
            start();
        </script>
      </div>

      <div id="resultados">
      </div>
    </div>

  </div>

</div>

<!-- FORMULARIO FIN -->


