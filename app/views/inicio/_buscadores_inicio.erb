<% @buscadores.each do |k,v| %>
	<div class="col-6 col-lg-3 p-3 my-1 text-center text-dark buscadores">
		<div class="portada-buscador bg-light rounded-0 pb-3">
			<%= link_to "<img src='/assets/portada/#{k.to_s}.jpg' class='mb-2 img-fluid rounded-0 btn-title' alt='...'><i class='#{k.to_s}-ev-icon mr-3 h2'></i>#{v[:nombre]}".html_safe, v[:url], :class => "font-weight-bold h4 m-0 pb-3 text-center text-dark", :title =>  "Ir a la búsqueda " << v[:titulo], data: { turbolinks: false }  %>
		</div>
		<div class="descripcion-buscador position-absolute h-100 rounded-0 p-3">
			<%= link_to v[:descripcion].html_safe, v[:url], :class => "btn btn-lg btn-light btn-title font-weight-bold d-flex align-items-center h-100 p-3", :title => "Ir a la búsqueda " << v[:titulo], data: { turbolinks: false } %>
		</div>
	</div>
<% end %>