<% if @resp[:estatus] %>

  <% if @resp[:totales].present? && params[:pagina].to_i == 1 %>
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <h3><strong><%= number_with_delimiter(@resp[:totales], delimiter: ',') %></strong> especies</h3>
      <div class="pull-right glyphicon glyphicon-arrow-right" id="carga-mas-especies"></div>
    </div>
  <% end %>

  <div class="row" id="contenedor_especies_itera" class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <% @resp[:taxones].each do |taxon| %>
      <% t = taxon[:especie] %>
      <div class="col-xs-6 col-sm-4 col-md-3 col-lg-2">
        <div class="thumbnail img-responsive">

          <% if t.foto_principal.present? %>
            <img src="<%= t.foto_principal %>" alt="<%= t.nombre_cientifico %>">
          <% else %>
            <i class="ev1-ev-icon"></i>
          <% end %>

          <div class="caption">
            <%= tituloNombreCientifico(t, { render: 'link' }, { target: :_blank }) %>
            <hr />
            <a href="#" class="btn btn-primary boton-especie-registros" especie_id="<%= t.id %>" role="button" snib_registros="<%= taxon[:snib_registros] %>" nombre_comun="<%= t.nombre_comun_principal %>" nombre_cientifico="<%= t.nombre_cientifico %>">Ver <%= taxon[:nregistros] %> registro(s)</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>

<% else %>
  <p><%= @resp[:msg] %></p>
<% end %>
