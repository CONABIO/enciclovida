<% content_for(:extracss) do %>
<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.9/dist/css/bootstrap-select.min.css">
<% end %>

<% content_for(:extrajs) do %>
<!-- Latest compiled and minified JavaScript -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.9/dist/js/bootstrap-select.min.js"></script>
<% end %>

<% content_for(:delayedjs) do %>
<script data-turbolinks-track="true">
    opciones = {};
    opciones.filtros = {};
    cargaMapa('map', {
        pantalla_comp: true,
        collapsed: true,
        position: 'bottomleft',
        hash: true
    });
</script>
<% end %>

<% content_for(:title) do %>
<%= @titulo='Búsqueda por región' %>
<% end %>

<% if notice.present? %>
<div class="alert alert-warning col-12" role="alert"><%= notice %></div>
<% end %>

<div class="alert alert-success d-none col-12" role="alert" id="notice"></div>

<div id="contenedor_mapa" class="col-12 overflow-hidden">
    <div id="map" style="" class="cartes w-100">
        <div class="legend geometry top center hide">
            <div class="wrapper">
                <div class="content"></div>
            </div>
        </div>
    </div>
    <%= render partial: 'sidebar' %>
    <div class="position-absolute w-50 h-100 pr-2 d-flex align-items-start flex-column" id="contenedor_especies"></div>

</div>
<div id="nombre-region-hover"></div>

<div id="loading" class="d-flex flex-column invisible justify-content-center position-fixed vh-100 vw-100">
  <div class="spinner-grow text-white-50 align-self-center" role="status" style="width: 10rem; height: 10rem;"></div>
  <div class="font-weight-bolder h3 text-center text-white w-100">Cargando registros, por favor espere...</div>
</div>