<%= form_tag explora_por_region_especies_path, :method => :get, :class => 'form-horizontal', :id => :busqueda_region do %>

  <div id="sidebar" class="sidebar collapsed">
    <div class="sidebar-tabs">
      <ul role="tablist">
        <li><a href="#busqueda-region-tab" role="tab"><i class="glyphicon glyphicon-search"></i></a></li>
        <li><a href="#filtros-tab" role="tab"><i class="glyphicon glyphicon-filter"></i></a></li>
      </ul>

      <ul role="tablist">
        <li><a href="#settings" role="tab" id="recarga-tab"><i class="glyphicon glyphicon-refresh"></i></a></li>
      </ul>
    </div>

    <div class="sidebar-content">
      <div class="sidebar-pane" id="busqueda-region-tab">
        <h1 class="sidebar-header">
          Busqueda por especie o región
          <span class="sidebar-close"><i class="fa fa-caret-left"></i></span>
        </h1>

        <h4>Busca por nombre científico o común</h4>
        <%= hidden_field_tag :especie_id, params.present? ? params[:especie_id] : nil %>
        <%= hidden_field_tag :tipo_region, params.present? ? params[:tipo_region] : nil %>
        <%= hidden_field_tag :pagina, params.present? && params[:pagina].present? ? params[:pagina] : 1 %>
        <%= text_field_tag :nombre, params.present? ? params[:nombre] : nil, :maxlength => 255, :placeholder => 'Nombre común o científico ...', :autocomplete => :off, :class => 'form-control input-lg' %>

        <hr />
        <h4>Busca por estado, municipio o ANP</h4>
        <%= hidden_field_tag :region_id, params.present? ? params[:region_id] : nil %>
        <%= text_field_tag :region, params.present? ? params[:nombre] : nil, :maxlength => 255, :placeholder => 'Estado, municipio o ANP ...', :autocomplete => :off, :class => 'form-control input-lg' %>
      </div>

      <div class="sidebar-pane" id="filtros-tab">
        <h1 class="sidebar-header">Filtros adicionales<span class="sidebar-close"><i class="fa fa-caret-left"></i></span></h1>
        <h4>Grupo taxonómico</h4>
        <%= checkboxGruposIconicosSnib.html_safe %>

        <h4>Categorías de riesgo y comercio internacional</h4>
        <%= checkboxEstadoConservacion.html_safe %>

        <h4>Tipo de distribución</h4>
        <%= checkboxTipoDistribucion.html_safe %>
      </div>

    </div>
  </div>

<% end %>