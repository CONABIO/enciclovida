<%# Es necesario pasar 2 variables "totales" (numero de resultados a descargar) y "tipo_descarga" (basica, avanzada, region, checklist) %>
<%= javascript_include_tag 'busquedas/region/descargas' if params[:controller] == 'busquedas_regiones' %>

<div class="modal fade" id="modal-descarga-<%= tipo_descarga %>" tabindex="-1" role="dialog" aria-labelledby="modal-descarga-label-<%= tipo_descarga %>">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="modal-descarga-label-<%= tipo_descarga %>">Descarga en excel la lista de las <%= totales %> especies</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="modal-body" id="modal-descarga-body">
        <p>
          <i>Selecciona los datos a exportar, toma en cuenta que entre más sean podría tardar más en generarlo </i>
        </p>

        <div class="form-group has-feedback">
          <%= form_with(url: '', method: 'get') do %>
            <div class="col-12 mb-3">
              <%= campoCorreo(tipo_descarga) %><br />
              <%= camposDescarga(tipo_descarga) %>
            </div>
          <% end %>
        </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
        <%= botonDescarga(tipo_descarga) %>
      </div>
    </div>
  </div>
</div>