<div id="brandBar" class="container-fluid">
  <div class="row text-right">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xs-offset-0 col-sm-offset-0 col-md-offset-0 col-lg-offset-0">
      <div class="btn-group" role="group" aria-label="...">

        <% if usuario_signed_in? %>
            <% if I18n.locale.to_s == 'es-cientifico' %>
                <%# link_to "Listas de #{t(:taxon_plural)}", listas_path %>
                <%= link_to "Validación de #{t(:taxon_plural)}", validaciones_taxon_path, :class => 'btn btn-sm text-success btn-success', :role => 'button' %>
            <% end %>
            <div class="btn-group" role="group">
              <%= link_to "#{current_usuario.usuario} <span class='caret'></span>".html_safe, '#', :class => 'btn btn-sm text-success btn-success dropdown-toggle', :role => 'button', 'data-toggle' =>'dropdown', 'aria-haspopup'=>'true', 'aria-expanded'=>'false' %>
              <ul class="dropdown-menu">
                <li><%= link_to 'Configuración de tu cuenta', edit_usuario_registration_path %></li>
                <li><%= link_to "Cerrar sesión", destroy_usuario_session_path, :method => :delete, data: {confirm: '¿Estás seguro que deseas cerrar la sesión?'.html_safe} %></li>
              </ul>
            </div>
        <% else %>
            <% if I18n.locale.to_s == 'es-cientifico' %>
                <%= link_to 'Iniciar sesión'.html_safe, new_usuario_session_path, :class => 'btn btn-sm text-success btn-success', :role => 'button' %>
            <% end %>
        <% end %>

        <div class="btn-group" role="group">
          <%= link_to "Acerca de...  <span class='caret'></span>".html_safe, '#', :class => 'btn btn-sm text-success btn-success dropdown-toggle', :role => 'button', 'data-toggle' =>'dropdown', 'aria-haspopup'=>'true', 'aria-expanded'=>'false' %>
          <ul class="dropdown-menu">
            <li><%= link_to '¿Qué es?', inicio_acerca_path << '?tab=queEs' %></li>
            <li><%= link_to 'Dos vistas', inicio_acerca_path << '?tab=dosVistas' %></li>
            <li><%= link_to 'Usos', inicio_acerca_path << '?tab=usos' %></li>
            <li><%= link_to 'Advertencias', inicio_acerca_path << '?tab=advertencias' %></li>
          </ul>
        </div>

        <% if I18n.locale.to_s == 'es-cientifico' %>
            <%= link_to 'Cambiar a vista general', nil, :name => :es, :onClick => 'return cambia_locale(this.name);', :class => 'btn text-danger btn-warning btn-sm', :role => 'button' %>
        <% else %>
            <%= link_to 'Cambiar a vista de especialistas', nil, :name => 'es-cientifico', :onClick => 'return cambia_locale(this.name);', :class => 'btn text-danger btn-warning btn-sm', :role => 'button' %>
        <% end %>

      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-6 col-sm-5 col-md-3 col-lg-2 col-xs-offset-0 col-sm-offset-1 col-md-offset-0 col-lg-offset-1 text-left">
      <%= link_to "<i class ='enciclo-ev-icon'></i><i class ='vida-ev-icon'></i>".html_safe, root_path, :class => ''  %>
    </div>
    <div class="col-xs-6 col-sm-4 col-md-3 col-lg-2 col-xs-offset-0 col-sm-offset-1 col-md-offset-0 col-lg-offset-0">
      <%= link_to "<i class ='conabio_blanco-ev-icon'></i>".html_safe, root_path, :class => ''  %>
    </div>
    <div id="busqueda_basica" class="col-xs-12 col-sm-12 col-md-6 col-lg-5 col-xs-offset-0 col-sm-offset-0 col-md-offset-0 col-lg-offset-1 ">
      <%= render :template => 'busquedas/basica' %>
    </div>
  </div>
</div>