<div class="row container "> 
  <h1> Usuarios - Roles </h1>
</div>


<div class="row">
  <p class="text-right">
    <%= link_to "<b class='glyphicon glyphicon-plus'></b> Asignar nuevo rol a usuario".html_safe, new_usuario_rol_path, class: 'btn btn-info btn-sm' %>
  </p>
</div>

<table class="table table-condensed table-hover table-responsive">


  <thead>
    <tr>
      <th>Usuario</th>
      <th>Rol</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @usuarios_roles.each do |usuario_rol| %>
      <tr>
        <td>[<%= usuario_rol.usuario_id %>] - <%= usuario_rol.nombre %> <%= usuario_rol.apellido %></td>
        <td>[<%= usuario_rol.rol_id %>] - <%= usuario_rol.nombre_rol %></td>
        <td><%= link_to 'Ver', usuario_rol %> | <%= link_to 'Editar', edit_usuario_rol_path(usuario_rol) %> | <%= link_to 'Eliminar', usuario_rol, method: :delete, data: { confirm: 'Estas seguro que deseas eliminar el usuario?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
