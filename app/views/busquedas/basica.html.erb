        </div>
        <div class="irBusquedaAvanzada">
            <%= link_to "<span class='glyphicon glyphicon-option-vertical' aria-hidden='true'></span> Búsqueda avanzada ".html_safe, avanzada_url, :title=>'Búsqueda Avanzada' %>
            <span class='glyphicon glyphicon-option-horizontal' aria-hidden='true' style="display: block"></span>
        </div>
      </div>
  <% end %>

