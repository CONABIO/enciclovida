<div class="col-xs-12 col-sm-7 col-md-5 col-lg-4">
  <fieldset>
    <legend><h5 class="text-primary"><strong>Búsqueda por grupo icónico:</strong></h5></legend>
    <div class="radio">
      <%= radioGruposIconicos.html_safe %>
    </div>
    <%= hidden_field_tag :busqueda, :avanzada %>
    <%= hidden_field_tag :por_pagina, Busqueda::POR_PAGINA_PREDETERMINADO, :id => :per_page_avanzada %>
  </fieldset>
  <div id="panelCategoriaTaxonomicaPt" style="display: none;">
    <fieldset>
      <legend><h5 class="text-primary"><strong>Categoria taxonómica</strong></h5></legend>
    </fieldset>
    <div id="datos_cat"></div>
  </div>
</div>

<div class="col-xs-12 col-sm-5 col-md-4 col-lg-4">
  <fieldset>
    <legend><h5 class="text-primary"><strong>Categorías de riesgo y comercio internacional</strong></h5></legend>
    <div class="checkbox">
      <%= checkboxEstadoConservacion %>
    </div>
  </fieldset>
</div>

<div class="col-xs-12 col-sm-4 col-md-3 col-lg-2">
  <fieldset>
    <legend><h5 class="text-primary"><strong>Tipo de distribución</strong></h5></legend>
    <div class="checkbox">
      <%= checkboxTipoDistribucion %>
    </div>
  </fieldset>
</div>

<div class="col-xs-12 col-sm-4 col-md-3 col-lg-2">
  <fieldset>
    <legend><h5 class="text-primary"><strong>Especies prioritarias para la conservación</strong></h5></legend>
    <div class="checkbox">
      <%= checkboxPrioritaria %>
    </div>
  </fieldset>
</div>
