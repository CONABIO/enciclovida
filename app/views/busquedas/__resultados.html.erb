<% if I18n.locale.to_s != 'es-cientifico' %>
    <% @taxones.each do |taxon| %>
        <input type="checkbox" name="especies[]" value="<%= taxon.id %>" class="especies" style="display: none;">

        <% if taxon.foto_principal.present? %>
            <% puts 'aqui' %>
            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
              <div class="imagen_resultados" style="background-image: url('<%= taxon.foto_principal %>');" >
                <%= tituloNombreCientifico(taxon, :link => true).html_safe %>
              </div>
            </div>
        <% else %>
            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-2">
              <div class="imagen_resultados">
                <%= tituloNombreCientifico(taxon, :link => true).html_safe %>
                <i class="ev1-ev-icon"></i>
              </div>
            </div>
          <% end %>
    <% end %>
<% else %>
    <% @taxones.each do |taxon| %>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6">
          <span class='datos_busqueda-<%= taxon.id %>'>
            <%= tituloNombreCientifico(taxon, :link => true) %>
          </span>
        </div>
    <% end %>
<% end %>

