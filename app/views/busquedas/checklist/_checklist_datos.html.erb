<div class="col-12" id="contenido-checklist">

  <div class="mb-4">
    El presente listado fue generado en <%= link_to "EncicloVida", request_url, target: :_blank %>, el d√≠a <%= DateTime.now.strftime("%Y/%m/%d") %> y contiene lo siguiente:<br />
    <%= @categorias_checklist.map{ |categoria| "#{categoria.nombre_categoria_taxonomica}: <b>#{categoria.totales}</b>" }.join(', ').html_safe %>
    <hr />
  </div>

  <% @taxones.each do |taxon| %>
    <% if taxon.nivel1 == 7 && taxon.nivel3 > 0 %>
      <div class="checklist-nivel-8">
    <% else %>
      <div class="checklist-nivel-<%= taxon.nivel1 %>">
    <% end %>
    
    <%= "<span id=\"datos_busqueda-#{taxon.id}\">#{generaChecklist(taxon)}</span><br />".html_safe %>
    </div>
  <% end %>

  <%= bibliografiasChecklist %>
</div>