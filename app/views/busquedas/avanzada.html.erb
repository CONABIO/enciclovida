<% content_for(:extracss) do %>
  <%= stylesheet_link_tag 'lib/bootstrap-select.min', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag 'boots4-upgrade/busquedas/avanzada/avanzada', 'data-turbolinks-track' => true %>

  <% if I18n.locale.to_s != 'es-cientifico' %>
    <style type="text/css" data-turbolinks-track="true">
      .soulmate-type-suggestions li{
        padding: 1em 0;
        min-height: 125px;
      }
    </style>
  <% end %>
<% end %>

<% content_for(:extrajs) do %>
  <%= javascript_include_tag 'lib/bootstrap-select.min', 'data-turbolinks-track' => true %>
<% end %>

<% content_for(:delayedjs) do %>
  <%= javascript_include_tag 'busquedas/avanzada/avanzada', 'data-turbolinks-track' => true %>
<% end %>

<% if params[:action] != 'resultados' %>
  <% content_for(:extra_title_header) do %>
    <%= render :partial => 'shared_b4/tituloBuscador', locals: {icon_class: 'busqueda-avanzada', titulo: 'Búsqueda avanzada', subtitulo: '(Selecciona un ícono o una combinación de íconos y presiona buscar)'} %>
  <% end %>
<% end %>

<div id="busqueda_avanzada" class="col mb-3">
  <%= form_tag busquedas_resultados_url, :method => :get, :class => 'form-row', :id => :b_avanzada  do %>
    <div class="col-12 mb-4" id="panelFiltros">
      <div class="row align-items-center">
        <% if I18n.locale.to_s == 'es-cientifico' %>
          <%= render :partial => 'busqueda_avanzada_vista_especialistas' %>
        <% else %>
          <%= render :partial => 'busqueda_avanzada_vista_general' %>
        <% end %>
      </div>
    </div>
    <div class="col">
      <button class="btn btn-success btn-block"  data-disable-with="Procesando..." id="buscar" name="commit" type="commit">Buscar <%= fa_icon "search" %></button>
    </div>
    <div class="col">
      <button class="btn btn-outline-secondary btn-block"  data-disable-with="Limpiando..." id="limpiar" name="button" type="reset">Borrar filtros <%= fa_icon "trash-o" %></button>
    </div>
  <% end %>
</div>
