<!-- Modal checklist -->
<div class="modal fade" id="modal-descarga-checklist" tabindex="-1" role="dialog" aria-labelledby="modal-descarga-checklist-label">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="modal-descarga-checklist-label">Descarga el checklist para los <%= @totales %> resultados</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="modal-body">
        <p>
          <i>Selecciona los datos a exportar para el checklist y se te enviar√° un correo cuando este listo.</i>
        </p>

        <div class="form-group has-feedback">
          <%= form_with(url: '', method: 'get', id: 'form-checklist') do %>
            <div class="col-12 mb-3">
              <%= campoCorreo('checklist').html_safe %>
            </div>

            <div class="col-12 mb-3">
              <%= campoDescargaChecklist %>
            </div>
          <% end %>
        </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
        <%= botonDescarga('checklist').html_safe %>
      </div>
    </div>
  </div>
</div>