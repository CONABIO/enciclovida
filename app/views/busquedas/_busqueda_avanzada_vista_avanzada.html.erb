<div id="busqueda_avanzada" class="row">
  <%= form_tag busquedas_resultados_url, :method => :get, :class => 'form-horizontal', :id => :b_avanzada  do %>
        <div class="panel panel-success dropup" id="panelFiltrosPt">
          <div class="panel-heading" onclick="$('#panelFiltros').slideToggle({duration: 500, easing: 'easeOutBounce', done: $('#panelFiltrosPt').toggleClass('dropup')});">
            <h5><span class="glyphicon glyphicon-option-vertical" aria-hidden="true"></span><strong>  Búsqueda Avanzada</strong><span class="caret pull-right"></span></h5>
          </div>
          <div class="panel-body" id="panelFiltros">

            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
              <fieldset>
                <legend><h5><strong>Búsqueda por nombre:</strong></h5></legend>
                <%= hidden_field_tag :id_nom_cientifico, nil, :id => :id_avanzada_cientifico %>
                <%= hidden_field_tag :id_nom_comun, nil, :id => :id_avanzada_comun %>

                <%= hidden_field_tag :busqueda, :avanzada %>
                <%= hidden_field_tag :por_pagina, Busqueda::POR_PAGINA_PREDETERMINADO, :id => :per_page_avanzada %>

                <div class="form-group">
                  <span class="label" style="color: #333333; font-weight: normal;">
                    <span class="glyphicon glyphicon-user" aria-hidden="true"></span><%= '  '+t(:nombre_comun) %>
                  </span>
                  <%= text_field_tag :nombre_comun, nil, :id => :nombre_comun_1, :maxlength => 255, :placeholder => t(:nombre_comun), :autocomplete => :off, :class => 'form-control' %>
                </div>

                <div class="form-group">
                  <span class="label" style="color: #333333; font-weight: normal;">
                    <span class="glyphicon glyphicon-education" aria-hidden="true"></span><%= '  '+t(:nombre_cientifico) %>
                  </span>
                  <%= text_field_tag :nombre_cientifico, nil, :id => :nombre_cientifico_1, :maxlength => 255, :placeholder => t(:nombre_cientifico), :autocomplete => :off, :class => 'form-control' %>
                </div>

                <div class="form-group">
                  <span class="label" style="color: #333333; font-weight: normal;">Resultados por página</span>
                  <%= select_tag :per_page, options_for_select(Busqueda::POR_PAGINA.map{|v| [v, v]}), :class => "busquedas form-control" %>
                </div>

              </fieldset>
              <div id="panelCategoriaTaxonomicaPt" style="display: none;">
                <fieldset>
                  <legend><h5><strong>Categoria taxonómica</strong></h5></legend>
                </fieldset>
                <div id="datos_cat"></div>
              </div>
            </div>



            <div class="col-xs-12 col-sm-6 col-md-5 col-lg-5">
              <fieldset>
                <legend><h5><strong>Categorías de riesgo y comercio internacional</strong></h5></legend>
                <div class="checkbox">
                  <%= checkboxEstadoConservacion %>
                </div>
              </fieldset>
            </div>


            <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3 col-sm-offset-1 col-md-offset-0 col-lg-offset-0">
              <fieldset>
                <legend><h5><strong>Tipo de distribución</strong></h5></legend>
                <div class="checkbox">
                  <%= checkboxTipoDistribucion %>
                </div>
              </fieldset>
            </div>

            <div class="col-xs-12 col-sm-5 col-md-3 col-lg-3">
              <fieldset>
                <legend><h5><strong>Estatus taxonómico</strong></h5></legend>
                <div class="checkbox">
                <%= checkboxValidoSinonimo %>
                </div>
              </fieldset>
            </div>

            <div class="col-xs-12 col-sm-5 col-md-3 col-lg-3">
              <fieldset>
                <legend><h5><strong>Especies prioritarias para la conservación</strong></h5></legend>
                <div class="checkbox" style="text-align: right">
                  <%= checkboxPrioritaria.html_safe %>
                </div>
              </fieldset>
            </div>

            <div class="col-xs-12 col-sm-8 col-md-4 col-lg-3 col-sm-offset-2 col-md-offset-8 col-lg-offset-9">
              <%= submit_tag :Buscar, :class => 'btn btn-success form-control busquedas', data: { disable_with: 'Procesando...' } %>
              <button class="form-control btn btn-default" data-disable-with="Limpiando..." id="limpiar" name="button" type="reset">Limpiar búsqueda</button>
            </div>

          </div>
        </div>
  <% end %>
</div>