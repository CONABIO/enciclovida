<script data-turbolinks-track="true">
    $(document).ready(function(){
        // Asigna el soulmate a la caja nombre
        soulmate_asigna('avanzada');
    });
</script>

<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
  <fieldset>
    <legend><h5 class="text-primary"><strong>Búsqueda por nombre:</strong></h5></legend>
    <%= hidden_field_tag :id, nil %>

    <%= hidden_field_tag :busqueda, :avanzada %>
    <%= hidden_field_tag :por_pagina, Busqueda::POR_PAGINA_PREDETERMINADO, :id => :per_page_avanzada %>

    <div class="form-group">
      <span class="label" style="color: #333333; font-weight: normal;">
        <span class="glyphicon glyphicon-user" aria-hidden="true"></span> <%= t(:nombre_comun) %>
      </span>
      <%= text_field_tag :nombre, nil, :maxlength => 255, :placeholder => 'Escribe un nombre común o científico ...',
                         :autocomplete => :off, :class => 'form-control', :value => params[:busqueda] == 'avanzada' ? params[:nombre_comun] : nil %>
    </div>

    <div class="form-group">
      <span class="label" style="color: #333333; font-weight: normal;">Resultados por página</span>
      <%= select_tag :per_page, options_for_select(Busqueda::POR_PAGINA.map{|v| [v, v]}), :class => 'busquedas form-control' %>
    </div>

  </fieldset>

  <div id="panelCategoriaTaxonomicaPt" style="display: none;">
    <fieldset>
      <legend><h5><strong>Categoria taxonómica</strong></h5></legend>
    </fieldset>
    <div id="datos_cat"></div>
  </div>
</div>

<div class="col-xs-12 col-sm-6 col-md-5 col-lg-5">
  <fieldset>
    <legend><h5 class="text-primary"><strong>Categorías de riesgo y comercio internacional</strong></h5></legend>
    <div class="checkbox">
      <%= checkboxEstadoConservacion %>
    </div>
  </fieldset>
</div>

<div class="col-xs-12 col-sm-6 col-md-3 col-lg-3 col-sm-offset-1 col-md-offset-0 col-lg-offset-0">
  <fieldset>
    <legend><h5 class="text-primary"><strong>Tipo de distribución</strong></h5></legend>
    <div class="checkbox">
      <%= checkboxTipoDistribucion %>
    </div>
  </fieldset>
</div>

<div class="col-xs-12 col-sm-5 col-md-3 col-lg-3">
  <fieldset>
    <legend><h5 class="text-primary"><strong>Estatus taxonómico</strong></h5></legend>
    <div class="checkbox">
      <%= checkboxValidoSinonimo %>
    </div>
  </fieldset>
</div>

<div class="col-xs-12 col-sm-5 col-md-3 col-lg-3">
  <fieldset>
    <legend><h5 class="text-primary"><strong>Especies prioritarias para la conservación</strong></h5></legend>
    <div class="checkbox">
      <%= checkboxPrioritaria %>
    </div>
  </fieldset>
</div>
