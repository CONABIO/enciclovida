    $(document).ready(function(){
        // Asigna el soulmate a la caja nombre
        soulmateAsigna('avanzada');
    });
</script>

<div class="col-12">
  <h5 class="btn btn-link" id="por_nombre_fuente"><i class="glyphicon glyphicon-chevron-left"></i><strong>Ir a búsqueda por nombre </strong></h5>
  <h5 class="btn btn-link" id="por_gi_fuente" style="display: none;"><strong>Ir a búsqueda por grupo icónico </strong><i class="glyphicon glyphicon-chevron-right"></i></h5>

  <div class="form-group radio row" id="por_gi">
    <%= radioGruposIconicos.html_safe %>
  </div>

  <div class="form-group row" id="por_nombre" style="display: none;">
    <div class="col">
      <%= text_field_tag :nombre, nil, :maxlength => 255, :placeholder => 'Escribe un nombre común o científico ...', :autocomplete => :off, :class => 'form-control', :value => params[:busqueda] == 'avanzada' ? params[:nombre_comun] : nil %>
    </div>
  </div>

  <div class="form-group row" id="panelCategoriaTaxonomicaPt" style="display: none;">
    <div class="col-12">
      <h5 class="text-primary"><strong>Categoria taxonómica</strong></h5>
      <div class="row" id="datos_cat"></div>
    </div>
  </div>

  <%= hidden_field_tag :busqueda, :avanzada %>
  <%= hidden_field_tag :id, nil %>

</div>

<div class="col-md">
  <h5 class="text-primary"><strong>Categorías de riesgo y comercio internacional</strong></h5>
  <%= checkboxEstadoConservacion.html_safe %>
</div>

<div class="col-md">
  <h5 class="text-primary"><strong>Tipo de distribución</strong></h5>
  <%= checkboxTipoDistribucion.html_safe %>
</div>

<div class="col-md">
  <h5 class="text-primary"><strong>Usos</strong></h5>
  <%= selectUsos.html_safe %>
</div>

<div class="w-100 mb-4"></div>

<div class="col-md">
  <h5 class="text-primary"><strong>Ambiente</strong></h5>
  <%= selectAmbiente.html_safe %>
</div>

<div class="col-md">
  <h5 class="text-primary"><strong>Distribución (reportada en literatura)</strong></h5>
  <%= selectRegiones.html_safe %>
</div>

<div class="col-md">
  <h5 class="text-primary"><strong>Especies prioritarias para la conservación</strong></h5>
  <%= checkboxPrioritaria.html_safe %>
</div>

<div class="col-md-2">
  <h5 class="text-primary"><strong>Resultados por página:</strong></h5>
  <%= select_tag :por_pagina, options_for_select(Busqueda::POR_PAGINA.map{|v| [v, v]}), :class => 'busquedas form-control' %>
