

<% @criterios["Características"].compact[0..1].each do |c|  %>
  <% next if  c[:nombre] == 'No aplica' %>
  <h5>
    <b><%= c[:tipo_propiedad] %>: </b>
    <i class='btn-title <%= c[:icono] %>' tooltip-title="<%= c[:nombre]%>"></i>
  </h5>
<% end %>
<% @criterios["Características"].compact[2..4].each do |c|  %>
  <% next if  c[:nombre] == 'Sin datos' %>
  <h5>
    <b><%= c[:tipo_propiedad] %>: </b>
    <% if Pmc::Criterio::CON_ADVERTENCIA.include?(c[:nombre]) %>
      <% warning = case c[:ancestry] when "321" then @pez[:veda_fechas] when "322" then 'Procura que el producto que consumas sea nacional' else '' end %>
      <button class="btn btn-xs btn-link btn-title" tooltip-title="<%= warning %>">
        <span class="glyphicon glyphicon-exclamation-sign btn-title text-danger" aria-hidden="true" ></span>
      </button>
    <% end %>
    <em><%= c[:nombre] %></em>
  </h5>
<% end %>
<hr />
<h5 class="text-center"><b>Estado de la población:</b></h5>
<%= dibujaZonasPez(@pez).html_safe %>

<h3>
  <% if tiene_permiso?('AdminPeces', true) %>
    <%= link_to '<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>'.html_safe, edit_pmc_pez_path(@pez), 'tooltip-title' => 'Editar', class: 'btn btn-warning btn-block btn-title' %>
  <% end %>
</h3>