<h1>Usuarios registrados a Enciclovida</h1>

<table class="table table-condensed table-hover table-responsive">
  <thead>
    <tr>
      <th>ID Usuario</th>
      <th>Datos Usuario</th>
      <th>Niveles de accesso</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @usuarios.each do |usuario| %>
      <tr>
        <td><%= usuario.id %></td>
        <td><%= usuario.nombre %> <%= usuario.apellido %> <br /><small><%= usuario.email %></small> <br /><small><%= usuario.institucion %></small></td>
        <td><%= usuario.nombre_rol %> <br /><%= usuario.nombre_cc %> <br /><%= usuario.nombre_cientifico%> <small><%= usuario.id_especie %></small></td>
        <td><small><%= link_to 'Ver', usuario %> | <%= link_to 'Editar', edit_usuario_path(usuario) %> | <%= link_to 'Eliminar', usuario, method: :delete, data: { confirm: '¿Estas seguro? es irreversible' } %></small></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Añadir un nuevo usuario', new_usuario_path %>
