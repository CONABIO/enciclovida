<% content_for(:title) do %>
    <%= @titulo='Inicia sesión' %>
<% end %>
<p id="notice"><%= notice %></p>

<div class="titulo">
  <h1><%= @titulo %></h1>
</div>
<%= form_tag(:action => 'intento_sesion') do %>
    <table width="1000" id="tabla_form"><tr>
      <td valign="top">
        <p>Usuario/correo</br> <%= text_field_tag :login %></p>
        <p>Contraseña</br> <%= password_field_tag :contrasenia %></p>
        <%= submit_tag 'Entrar' %>
        <br>
        <% if session[:usuario].blank? %>
            <p>¿Aún no tienes cuenta? <%= link_to 'Crea una', new_usuario_url, :class => 'link_azul' %></p>
        <% end %>
      </td>
    </tr></table>
<% end %>
