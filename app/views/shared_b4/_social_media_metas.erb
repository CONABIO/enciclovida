<!-- OpenGraph-->
<meta property="og:type" content="artículo" />
<meta property="og:title" content="<%= yield :title %>" />
<meta property="og:description" content="<%= yield :title %> | EncicloVida es una plataforma web de consulta creada por la CONABIO, para conocer a las especies y grupos que viven en México. Integra información que la Comisión Nacional para el Conocimiento y Uso de la Biodiversidad (CONABIO) ha reunido a través del Sistema Nacional de Información sobre Biodiversidad (SNIB)" />
<meta property="og:image" content="<%= @datos[:foto_principal].present? ? @datos[:foto_principal] : (params['imagotipo'].present? ? CONFIG.site_url + 'imagenes/imagotipo_enciclovida.jpg' : CONFIG.site_url + 'imagenes/imagotipo_enciclovida_fondo_blanco.jpg') %>" />
<meta property="og:url" content="<%= CONFIG.site_url[0..-2] + especie_path(@especie) %>" />
<meta property="og:site_name" content="<%= CONFIG.site_name %>" />

<!-- Twitter -->
<meta name="twitter:card" content="summary"></meta>
<meta name="twitter:title" content="<%= yield :title %>">
<meta name="twitter:description" content="<%= yield :title %> | EncicloVida es una plataforma web de consulta creada por la CONABIO, para conocer a las especies y grupos que viven en México. Integra información que la Comisión Nacional para el Conocimiento y Uso de la Biodiversidad (CONABIO) ha reunido a través del Sistema Nacional de Información sobre Biodiversidad (SNIB)">
<meta name="twitter:site" content="@CONABIO">
<meta name="twitter:image" content="<%= @datos[:foto_principal].present? ? @datos[:foto_principal] : CONFIG.site_url + 'imagenes/imagotipo_enciclovida.jpg' %>">
<meta name="twitter:creator" content="@CONABIO">