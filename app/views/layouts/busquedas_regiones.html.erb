  <script src="https://manubb.github.io/Leaflet.PixiOverlay/js/MarkerContainer.js"></script>
  <script src="https://manubb.github.io/Leaflet.PixiOverlay/js/bezier-easing.js"></script>

  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'busquedas/region/por_region', 'data-turbolinks-track' => true %>

  <script type="text/javascript" data-turbolinks-track="true">
      I18n.defaultLocale = "<%= CONFIG.default_locale.to_s %>";
      I18n.locale = "<%= I18n.locale %>";
      I18n.fallbacks = true;
  </script>

  <%= csrf_meta_tags %>
  <%= yield :extrahead %>
  <%= yield :extracss %>
