  <!--link rel="stylesheet" href="https://manubb.github.io/Leaflet.PixiOverlay/css/leaflet.css" />
  <link rel="stylesheet" href="https://manubb.github.io/Leaflet.PixiOverlay/css/carte.css" /-->

  <script type="text/javascript" data-turbolinks-track="true">
      TYPES = ["especie", "genero", "familia", "orden", "clase", "division", "phylum", "reino"];
      SITE_URL = "<%= CONFIG.site_url %>";
  </script>

  <!--script src="https://d3js.org/d3.v6.min.js"></script-->
