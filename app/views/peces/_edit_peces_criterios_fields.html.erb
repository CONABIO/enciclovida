<div class='nested-fields'>
  <%= f.inputs do %>
    <%
      propiedad = f.object.criterio.propiedad
      if !propiedad.es_categoria_de_riesgo?
    %>

      <%= f.input :criterio_id, label: propiedad.tipo_propiedad, as: :select,
                  collection: grouped_options_for_select(Criterio.catalogo, selected: f.object.criterio_id) %>
      <%= link_to_remove_association 'Quitar criterio', f %>
    <% end %>
  <% end %>
</div>