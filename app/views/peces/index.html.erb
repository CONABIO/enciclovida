<h1>Administración de especies marinas comerciales</h1>
<%= link_to '<span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Agregar nueva especie marina comercial'.html_safe, new_pez_path if params[:action] == 'index' %>
<h2><span class="label label-info"><%= @peces.length%></span></h2>
<table class="table table-striped table-hover table-condensed table-responsive">
  <thead>
    <tr>
      <th>Especie</th>
      <th>Imagen</th>
      <th>Valor total</th>
      <th>Valor zonas</th>
      <th>Valor</th>
      <th>Año</th>
      <th>Propiedad</th>
      <% if params[:action] == 'index'  %>
      <th>Administración</th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @peces.each do |pez| %>
      <tr>
        <td>
          <span class="label label-info"><%= pez.especie_id %></span>
          <small><b><i><%= pez.nombre_cientifico%></i></b></small><hr>
          <% if pez.nombres_comunes.present? %>
            <% pez.nombres_comunes.split(',').each do |nc| %>
              <small><%= nc%></small><br>
            <% end %>
          <% end %>
        </td>
        <td><%= image_tag(pez.imagen, class: "img-responsive") %></td>
        <td><%= pez.valor_total %></td>
				<td><%= pez.valor_zonas %></td>
        <td><%= pez.valor %></td>
        <td><%= pez.anio %></td>
        <td>
          <small><%= pez.tipo_propiedad %>:<br><%= pez.nombre_propiedad %></small>
        </td>
        <% if params[:action] == 'index'  %>
          <td>
            <%= link_to '<span class="glyphicon glyphicon-play" aria-hidden="true"></span>'.html_safe, pez_path(pez), title: 'Mostrar'%>
            <%= link_to '<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>'.html_safe, edit_pez_path(pez), title: 'Editar' %>
            <%= link_to '<span aria-hidden="true">&times;</span>'.html_safe, pez_path(pez), method: :delete, data: { confirm: '¿Estas seguro?' }, class: 'close', title: 'Eliminar' %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '<span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Agregar nueva especie marina comercial'.html_safe, new_pez_path if params[:action] == 'index' %>

