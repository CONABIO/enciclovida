<%- content_for(:extracss) do -%>
  <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<%- end -%>
<%- content_for(:extrajs) do -%>
  <script>
  </script>
<%- end -%>

<div id="busqueda_avanzada">

  <%= form_tag busqueda_pez_index_path, :method => :post, :class => '', :id => :b_peces  do %>

    <div class="exacta col-xs-12 <%= 'col-sm-6 col-md-4 col-lg-4' if(@peces.nil?) %>">
      <fieldset>
        <legend><h5 class="text-primary"><strong>Búsqueda por nombres:</strong></h5></legend>
        <div class="ui-widget form-peces">
          <%= text_field_tag(:ncomunes, nil, placeholder: 'Nombre común...', class: 'form-control input-lg') %>
        </div>

        <div class="ui-widget form-peces">
          <%= text_field_tag(:ncientifico, nil, placeholder: 'Nombre científico...', class: 'form-control input-lg' ) %>
        </div>

        <%= hidden_field_tag(:especie_id) %>
      </fieldset>
      <hr/>
    </div>



    <div class="recomendada  col-xs-12 <%= 'col-sm-6 col-md-4 col-lg-4' if(@peces.nil?) %>">
      <fieldset class="text-center">
        <legend><h5 class="text-primary"><strong>Recomendación:</strong></h5></legend>
        <div class="col-xs-12 form-peces">
          <%= checkboxRecomendacion %>
        </div>
      </fieldset>
      <hr/>
    </div>

    <div class="agrupada col-xs-12 <%= 'col-sm-6 col-md-4 col-lg-4' if(@peces.nil?) %>">
      <fieldset>
        <legend><h5 class="text-primary text-center"><strong>Búsqueda por criterios:</strong></h5></legend>

        <div class="col-xs-10 col-xs-offset-1 form-peces">
          <%= select_tag(:grupos, options_for_select(@filtros[:grupos].map{|k| [k.nombre_propiedad, k.id]}), :prompt => '- - Grupo marino - -', :class => 'form-control input-sm' ) %>
        </div>
        <div class="col-xs-10 col-xs-offset-1 form-peces">
          <%= select_tag(:zonas, options_for_select(@filtros[:zonas]), :prompt => '- - Zona - -', class: 'form-control input-sm') %>
        </div>
        <div class="col-xs-10 col-xs-offset-1 form-peces">
          <%= select_tag(:tipo_capturas, options_for_select(@filtros[:tipo_capturas].map {|k| [k.nombre_propiedad, k.id]}), :prompt => '- - Tipo de captura - -', :class => 'form-control input-sm') %>
        </div>
        <div class="col-xs-10 col-xs-offset-1 form-peces">
          <%= select_tag(:tipo_vedas, options_for_select(@filtros[:tipo_vedas].map {|k| [k.nombre_propiedad, k.id]}), :prompt => '- - Tipo de veda - -', :class => 'form-control input-sm') %>
        </div>
        <div class="col-xs-10 col-xs-offset-1 form-peces">
          <%= select_tag(:procedencias, options_for_select(@filtros[:procedencias].map {|k| [k.nombre_propiedad, k.id]}), :prompt => '- - Procedencia - -', :class => 'form-control input-sm') %>
        </div>
        <div class="col-xs-10 col-xs-offset-1 form-peces">
          <%= select_tag(:pesquerias, grouped_options_for_select(@filtros[:pesquerias]), :prompt => '- - Pesquerías - -', class: 'form-control input-sm') %>
        </div>
        <div class="col-xs-10 col-xs-offset-1 form-peces">
          <%= select_tag(:nom, options_for_select(@filtros[:nom].map {|k| [k.nombre_propiedad, k.id]}), :prompt => '- - NOM-059 (2010) - -', :class => 'form-control input-sm') %>
        </div>
        <div class="col-xs-10 col-xs-offset-1 form-peces">
          <%= select_tag(:iucn, options_for_select(@filtros[:iucn].map {|k| [k.nombre_propiedad, k.id]}), :prompt => '- - Lista roja IUCN (2016-3) - -', class: 'form-control input-sm') %>
        </div>
      </fieldset>
      <hr/>
    </div>



    <div class="col-xs-12 <%= 'col-sm-8 col-md-4 col-lg-3 col-xs-offset-0 col-sm-offset-2 col-md-offset-8 col-lg-offset-9' if(@peces.nil?) %>">
      <%= button_tag "Buscar", data: {disable_with: 'Procesando...'}, :class => "btn btn-success btn-lg btn-block btn-title", :title => 'Buscar', :type => 'submit', :name => 'commit', :value => 'Buscar' %>
      <%= button_tag "Limpiar", :type => 'button', :class => "btn btn-default btn-lg btn-block btn-title", :title => 'Limpiar', :onClick => 'limpiaBusqueda();' %>
    </div>

  <% end -%>
</div>
