<% @peces.each do |pez| %>
  <div class="result-img-container">

    <% if pez.con_estrella %>
      <span class="glyphicon glyphicon-star text-success" aria-hidden="true"></span>
    <% end %>

    <% if pez.imagen =~ URI::regexp %>
      <%= button_tag image_tag(pez.imagen, class: "img-responsive"), type: 'button', class: 'btn-ficha', "data-especie-id" => pez.especie_id, "data-toggle" => "modal", "data-target" => "#multiModal" %>
    <% else %>
      <button class="btn-ficha" data-especie-id="<%= pez.especie_id %>" type="button" data-toggle="modal" data-target="#multiModal">
        <i class="<%= pez.imagen %> icono-resultado-pez"></i>
      </button>
    <% end %>

    <div class="result-nombre-container">
      <%= dibujaZonasPez(pez).html_safe %>
      <%= tituloNombreCientifico(pez.especie, :link => true).html_safe %>

    </div>

  </div>

<% end %>
