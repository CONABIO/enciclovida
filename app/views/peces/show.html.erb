<div class="panel panel-success">

  <div class="panel-heading">
    <%= tituloNombreCientifico(@pez.especie, :link => true).html_safe %>

    <% if tiene_permiso?('Administrador') %>
      <%= link_to '<span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>'.html_safe, pez_path(@pez), title: 'Mostrar'%>
      <%= link_to '<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>'.html_safe, edit_pez_path(@pez), title: 'Editar' %>
      <%= link_to '<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>'.html_safe, pez_path(@pez), method: :delete, data: { confirm: 'Â¿Estas seguro?' }, class: 'close', title: 'Eliminar' %>
    <% end %>
  </div>

  <div class="panel-body">
    <%= render :partial => 'peces/svg_zonas_marinas_show', locals: {color_zona: @pez.valor_zonas.split('')} %>

    <dl class="dl-horizontal">
      <% @criterios.each do |c|  %>
        <dt><% if Criterio::CON_ADVERTENCIA.include?(c.nombre_propiedad) %>
            <span class="glyphicon glyphicon-exclamation-sign text-danger" aria-hidden="true"></span>
            <% end %><%= c.tipo_propiedad %>:
        </dt>

        <dd>
          <small class="pull-left"><%= c.nombre_propiedad %></small><span class="label label-default pull-right"><%= c.valor%></span>
        </dd>
      <% end %>

    </dl>
    <p>-5..4 -> V</p>
    <p>5..19 -> A</p>
    <p>20..100 -> R</p>
  </div>
</div>