<h3>
  <%= tituloNombreCientifico(@pez.especie, :show => true).html_safe %>
  <% if tiene_permiso?('Administrador') %>
    <%= link_to '<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>'.html_safe, edit_pez_path(@pez), 'tooltip-title' => 'Editar', class: 'btn btn-link btn-title pull-right' %>
    <%= link_to '<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>'.html_safe, pez_path(@pez), method: :delete, data: { confirm: 'Â¿Estas seguro?' }, 'tooltip-title' => 'Eliminar', class: 'btn btn-link btn-title pull-right' %>
  <% end %>
</h3>



<div class="row" id="panel-body">
  <% if @pez.imagen =~ URI::regexp %>
    <div class="col-sm-6 col-md-7">
      <%= render :partial => 'peces/svg_zonas_marinas_show', locals: {color_zona: @pez.valor_zonas.split('')} %>
    </div>
    <div class="col-xs-8 col-sm-6 col-md-5 col-xs-offset-2 col-sm-offset-0">
      <%= image_tag(@pez.imagen, class: "img-responsive img-thumbnail img-rounded") %>
    </div>
  <% else %>
    <div class="col-xs-8 col-xs-offset-2">
      <%= render :partial => 'peces/svg_zonas_marinas_show', locals: {color_zona: @pez.valor_zonas.split('')} %>
    </div>
  <% end %>

  <div class="col-xs-12">
    <dl class="dl-horizontal">
      <% @criterios.each do |c|  %>
        <dt><% if Criterio::CON_ADVERTENCIA.include?(c.nombre_propiedad) %>
            <span class="glyphicon glyphicon-exclamation-sign text-danger" aria-hidden="true"></span>
            <% end %><%= c.tipo_propiedad %>:
        </dt>

        <dd>
          <small class="pull-left"><%= c.nombre_propiedad %></small><span class="label label-default pull-right"><%= c.valor%></span>
        </dd>
      <% end %>
    </dl>
    <p>-5..4 -> V</p>
    <p>5..19 -> A</p>
    <p>20..100 -> R</p>
  </div>
</div>