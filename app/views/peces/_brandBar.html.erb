<div id="brandBar" class="row" <%= "style='  background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(236, 236, 236, 0.8)), url(\"/fondos/#{rand(1..16)}.jpg\");'".html_safe %>>

  <div class="dropdown pull-right">
    <button id="menuEsqSupDer" type="button" class="btn btn-xs btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      <%= usuario_signed_in? ? current_usuario.nombre : " Más" %>...
      <span class="caret"></span>
      <i class='vista-<%= I18n.locale.to_s == 'es-cientifico' ? 'especialista' : 'general' %>-ev-icon'></i>
    </button>
    <ul class="dropdown-menu" aria-labelledby="menuEsqSupDer">
      <li><%= link_to "<b>Cambiar a la vista #{I18n.locale.to_s == 'es-cientifico' ? 'general' : 'de especialistas'}</b>
      <i class='vista-#{I18n.locale.to_s == 'es-cientifico' ? 'general' : 'especialista'}-ev-icon'></i>".html_safe, nil,
                      :name => I18n.locale.to_s, :onClick => 'return cambiaLocale(this.name);', data: { turbolinks: false } %></li>
      <li role="separator" class="divider"></li>
      <li><%= link_to '<b>Validación en línea...</b>'.html_safe, validaciones_path, :role => 'button', data: { turbolinks: false } %></li>
      <li role="separator" class="divider"></li>
      <li><%= link_to '¿Qué es EncicloVida?', inicio_acerca_path << '?tab=queEs', data: { turbolinks: false } %></li>
      <li role="separator" class="divider"></li>
      <% if usuario_signed_in? %>
        <li><%= link_to 'Administracion de comentarios', admin_path, data: { turbolinks: false } %></li>
        <li><%= link_to 'Configuración de tu cuenta', edit_usuario_registration_path, data: { turbolinks: false } %></li>
        <li><%= link_to "Cerrar sesión", destroy_usuario_session_path, :method => :delete, data: {confirm: '¿Estás seguro que deseas cerrar la sesión?'.html_safe, turbolinks: false} %></li>
      <% else %>
        <li><%= link_to('<b>Iniciar sesión...</b>'.html_safe, new_usuario_session_path, data: { turbolinks: false }) %></li>
      <% end %>
    </ul>
  </div>

  <div class="col-xs-4 col-sm-3 col-md-3 col-lg-2 col-xs-offset-0 col-sm-offset-1 col-md-offset-1 col-lg-offset-1">
      <%= link_to "<i class ='enciclo-ev-icon'></i><i class ='vida-ev-icon'></i>".html_safe, root_path, :class => '', data: { turbolinks: false }  %>
  </div>
  <div class="col-xs-4 col-sm-3 col-md-3 col-lg-2 col-xs-offset-0 col-sm-offset-1 col-md-offset-0 col-lg-offset-0">
    <%= link_to "<i class ='conabio_completo-ev-icon'></i>".html_safe, "http://www.biodiversidad.gob.mx/", :class => '', target: :_blank  %>
  </div>
  <div class="col-xs-4 col-sm-3 col-md-3 col-lg-2 col-xs-offset-0 col-sm-offset-1 col-md-offset-1 col-lg-offset-4">
    <%= link_to "<i class ='cobi-ev-icon'></i>".html_safe, "http://cobi.org.mx/", :class => '', target: :_blank  %>
    <br />
    <b class="text-info" style="font-size: 75%;">(en colaboración conjunta)</b>
  </div>

</div>
